<% layout("/layouts/boilerplate") %>
<body>
  <h3 class="text-center mt-3">Order Placed Successfully!</h3>
  
  <div class="container mt-3 mb-3" style="display: flex;
      justify-content: center;
      align-items: center;
      text-align: center;">
      
    <!-- Displaying confirmation details -->
    <div class="card mx-auto" style="max-width: 700px; border-radius: 10px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);">
      <div class="card-body">
        <h5 class="card-title text-center">Order Summary</h5>
        <p class="card-text"><strong>Order ID:</strong> <%= orderId %></p>
        
        <!-- Order items summary -->
         <b>
        <h5 class="mt-4 text-center" ><strong>Ordered Items:</strong>
          </h5>
      </b>
        <% cart.forEach((item, index) => { %>
          <div class="order-item mb-3" style=" display: inline-block;
      margin-bottom: 20px;
      text-align: center;">
            <h6 class="text-center" ><%= item.title %></h6>
            <p class="text-center">Price: ₹<%= item.price %> INR</p>
            <div class="text-center">
              <img  src="<%= item.image %>" alt="<%= item.title %>" class="img-fluid item-img" style="width: 100px; 
      height: 150px;
      object-fit: cover;
      border-radius: 8px;
      font-weight: 400;">
            </div>
          </div>
        <% }) %>
        <p class="card-text"><strong>Total Amount:</strong> ₹<%= (isNaN(totalAmount) ? 0 : parseFloat(totalAmount)).toFixed(2) %> INR</p>
        <p class="card-text"><strong>Payment Method:</strong> <%= paymentMethod %></p>
        <p class="card-text"><strong>Order Date:</strong> <%= orderDate %></p>


        <!-- Confirmation Message -->
        <p class="mt-3 text-center">Thank you for shopping with us! Your order will be processed and shipped soon.</p>
        
        <!-- Back to Home or Cart button -->
        <div class="text-center mt-4">
          <a href="/listings" class="btn btn-color btn-primary mx-2" style="padding: 10px 20px;
      font-size: 16px;">Back to Home</a>
          <a href="/listings/cart" class="btn btn-color btn-secondary mx-2" style="padding: 10px 20px;
      font-size: 16px;">Back to Cart</a>
        </div>
      </div>
    </div>
  </div>