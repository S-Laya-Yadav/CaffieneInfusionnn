<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <h2 class="text-center">Login</h2>
  <div class="col-6 offset-3">
      <form action="/login" method="POST" class="mt-4">
          <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input 
                  name="username"
                  id="username"
                  type="text"
                  class="form-control"
                  required
              >
          </div>
          <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input 
                  name="password"
                  id="password"
                  type="password"
                  class="form-control"
                  required
              >
          </div>
          <!-- Submit Button inside the form -->
          <button type="submit" class="btn  login-btn btn-color" >Login</button>
          
      </form>
      <p class="mt-3 text-center ">Create an Account <a href="/signup">Sign up here</a></p>
  </div>
</div>
